    {{#if isLogin}}
    <div style="text-align: right; margin-right: 150px; margin-top:50px">
          <a href="/add-blog" style="background-color: orangered; padding: 8px 20px; color:white; border-radius: 5px; text-decoration: none">Add Blog</a>
    </div>
    {{/if}}
  
    <div class="form-container mb-5 d-flex justify-content-center align-items-center mt-5">
      
      <form class="form-contact shadow body rounded bg-light p-3 " action="/add-project" method="post">
        <div class="text-center">
          <h2>Add My Project</h2>
        </div>
        <div class="mb-3">
          <label for="name" class="form-label fs-5" >Project Name</label>
          <input type="text" class="form-control" placeholder="Type your name" id="projectName" name ="projectName" aria-describedby="emailHelp">
        </div>

        <div class="row g-3">
          <div class="col-sm-6">
            <label for="firstName" class="form-label fs-5">Start Date</label>
            <input type="date" class="form-control" id="firstDate" name="firstDate" placeholder="" value="" required>
            <div class="invalid-feedback">
              Valid first name is required.
            </div>
          </div>

          <div class="col-sm-6 mb-3">
            <label for="lastName" class="form-label fs-5">End Date</label>
            <input type="date" class="form-control" id="lastName" name="lastName" placeholder="" value="" required>
            <div class="invalid-feedback">
              Valid last name is required.
            </div>
          </div>

        </div>
        
        <div class="mb-3">
          <label for="your-message "class="form-label fs-5 " >Description</label>
          <textarea class="form-control" placeholder="Type your message here" id="yourMessage" name="yourMessage" rows="3"></textarea>
        </div>


        <div class="heading fs-5">
          Technologies
        </div>
        <div class="my-3 d-flex flex-row justify-content-evenly ms-1">
          
          <div class="form-check me-3">
            <input id="nodeJs" name="nodeJs" type="checkbox" class="form-check-input">
            <label class="form-check-label" for="credit">Node Js</label>
          </div>
          <div class="form-check">
            <input id="nextJs" name="nextJs" type="checkbox" class="form-check-input">
            <label class="form-check-label" for="debit">Next Js</label>
          </div>
        </div>
        <div class="my-3 d-flex flex-row justify-content-evenly ms-1">
          <div class="form-check me-3">
            <input id="reactJs" name="reactJs" type="checkbox" class="form-check-input">
            <label class="form-check-label" for="credit">React Js</label>
          </div>
          <div class="form-check">
            <input id="typescript" name="typeScript" type="checkbox" class="form-check-input">
            <label class="form-check-label" for="debit">Typescript</label>
          </div>
        </div>

        <div class="input-group">
          <input type="file" class="form-control" id="inputImage" name="inputImage" aria-describedby="inputGroupFileAddon04" aria-label="Upload" >
        </div>
        
        
        <div class=" button-form d-flex justify-content-end mt-5">
          <button type="submit" class="btn btn-orange text-white ">Submit</button>
        </div>
        
      </form>
  </div>

